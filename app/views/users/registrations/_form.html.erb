

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-inline form-register form-register-small'}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.text_field :mobile, autofocus: true,  class: 'form-control',placeholder: 'Your mobile' %></div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true,  class: 'form-control',placeholder: 'Your email' %></div>
  <div class="form-group">
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Choose a password' %></div>

  <div class="form-group submit-wrap"><%= f.submit "Sign up", class: 'btn btn-primary btn-md' %></div>
<% end %>