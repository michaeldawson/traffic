<!DOCTYPE html>
<html>
<head>
  <title>Traffic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="http://maps.google.com/maps/api/js?sensor=true"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
</head>
<body data-action="<%= action_name %>" data-controller="<%= nice_controller_name %>" >
  <%= render 'layouts/preloader' %>    
  <%= render 'layouts/header' if controller_name == 'static' && action_name == 'index' %>
  
  <%= yield %>

  <%= render 'layouts/facebook' %>
</body>
</html>
